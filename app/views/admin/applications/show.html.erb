<section id="applicant_info-<%= @application.id %>">
  <h1>Application For: <%= @application.name %></h1>
  <h3>Address: <%= "#{@application.street_address} #{@application.city} #{@application.state} #{@application.zipcode} " %></h1>
  <h3>Applicant Description: <%= @application.description %></h3>
  <h3>Reason for Adoption: <%= @application.adoption_reason %></h3>
  <br>
  <h3>Status: <%= @application.status %></h3>
</section>

<section id="pets_applied_for">
  <h3>Pets Applied For</h3>
  <% @application.pets.each do |pet| %>
  <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
  <% end  %>
</section>
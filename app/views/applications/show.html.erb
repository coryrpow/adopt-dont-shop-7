<section id="applicant_info-<%= @application.id%>">
  <h1>Application For: <%= @application.name %></h1>
  <h3>Address: <%= "#{@application.street_address} #{@application.city} #{@application.state} #{@application.zipcode} " %></h1>
  <h3>Description: <%= @application.description %></h3>
  <br>
  <h3>Status: <%= @application.status %></h3>
</section>

<h3>Pets Applied For</h3>
<% @pets.each do |pet| %>
<%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
<% end  %>


<h3>Add a pet this application</h3>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true, data: {turbo: false} do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

<% if @search %>
  <h3>Search Results</h3>
  <% @results.each do |result| %>
    <%= result.name %>
    <%= button_to "Adopt this Pet", "/applications/#{@application.id}/pet_applications", params: {pet_id: result.id} %>
  <% end %>

  <% else %>
  <p>No results input to search</p>
<% end %>




